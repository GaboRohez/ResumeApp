<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@color/colorBackgroundRecycler"
    tools:context=".ui.about.AboutFragment"
    android:focusable="true">


    <xyz.gabrielrohez.resumeapp.custom.scroll.ObservableScrollView
        android:id="@+id/aboutScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <!-- header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_300">
                <FrameLayout
                    android:id="@+id/img_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/ivAboutHeaderImage"
                        android:src="@drawable/dummy_header"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />
                </FrameLayout>
                <RelativeLayout
                    android:background="#7E000000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        style="@style/subtitle2"
                        android:textColor="@color/colorWhite"
                        android:id="@+id/tvAboutName"
                        android:layout_centerInParent="true"
                        android:text="Jose Gabriel Rodríguez Hernández"/>
                    <LinearLayout
                        android:id="@+id/llAboutHeader"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_vertical"
                        android:layout_below="@id/tvAboutName"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/dimen_15"
                            android:layout_marginRight="@dimen/smallMargin"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_location"
                            android:tint="@color/colorWhite"/>
                        <TextView
                            android:id="@+id/tvAboutLocation"
                            style="@style/caption"
                            android:textColor="@color/colorWhiteLight"
                            android:text="Ciudad de México, CDMX"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvAboutJob"
                        android:layout_below="@+id/llAboutHeader"
                        android:layout_centerHorizontal="true"
                        style="@style/caption"
                        android:textColor="@color/colorWhiteLight"
                        android:text="Developer Android"/>
                </RelativeLayout>
            </RelativeLayout>
            <!-- body -->

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="6dp"
                android:layout_margin="@dimen/smallMargin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="@dimen/mediumMargin"
                    android:layout_width="match_parent"
                    android:layout_height="125dp">

                    <TextView
                        style="@style/subtitle3"
                        android:layout_marginBottom="@dimen/smallMargin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Social"/>

                    <LinearLayout
                        android:weightSum="3"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:id="@+id/layoutAboutWeb"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="?attr/selectableItemBackground"
                                android:src="@drawable/icon_web"/>
                            <TextView
                                style="@style/body3"
                                android:text="Web"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/layoutAboutPlay"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="?attr/selectableItemBackground"
                                android:src="@drawable/icon_play_store"/>
                            <TextView
                                style="@style/body3"
                                android:text="Play Store"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/layoutAboutGit"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:background="?attr/selectableItemBackground"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/icon_github"/>
                            <TextView
                                style="@style/body3"
                                android:text="Github"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="6dp"
                android:layout_margin="@dimen/smallMargin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="@dimen/mediumMargin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ivAboutIconContact"
                        android:layout_marginRight="@dimen/mediumMargin"
                        android:tint="@color/colorBlue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_message"/>
                    <TextView
                        android:id="@+id/tvAboutEmail"
                        android:layout_toRightOf="@+id/ivAboutIconContact"
                        style="@style/body3"
                        android:text="gabow95k@gmail.com"/>
                    <TextView
                        android:id="@+id/tvAboutPhone"
                        android:layout_below="@+id/tvAboutEmail"
                        android:layout_toRightOf="@+id/ivAboutIconContact"
                        style="@style/body3"
                        android:text="7712213158"/>
                    <View
                        android:id="@+id/viewSeparator"
                        android:layout_marginTop="@dimen/mediumMargin"
                        android:layout_below="@+id/tvAboutPhone"
                        android:layout_width="match_parent"
                        android:background="@color/colorGrayLight"
                        android:layout_height="0.5dp"/>
                    <TextView
                        android:id="@+id/tvAboutResume"
                        android:layout_marginTop="@dimen/smallMargin"
                        android:justificationMode="inter_word"
                        android:layout_below="@+id/viewSeparator"
                        style="@style/body3"
                        android:text="@string/resume"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="6dp"
                android:layout_margin="@dimen/smallMargin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="@dimen/mediumMargin"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <TextView
                        android:id="@+id/tvAboutTitleYOE"
                        style="@style/subtitle3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Conocimientos Generales (Años de experiencia)"/>

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/barChart"
                        android:layout_height="150dp"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/tvAboutTitleYOE"
                        android:layout_marginTop="@dimen/mediumMargin" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="6dp"
                    android:layout_margin="@dimen/smallMargin"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="@dimen/mediumMargin"
                        android:layout_width="match_parent"
                        android:layout_height="200dp">
                        <TextView
                            style="@style/subtitle3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Aptitudes"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_marginTop="@dimen/smallMargin"
                            android:id="@+id/rvAboutAptitudes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="6dp"
                    android:layout_margin="@dimen/smallMargin"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="@dimen/mediumMargin"
                        android:layout_width="match_parent"
                        android:layout_height="200dp">
                        <TextView
                            style="@style/subtitle3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Intereses"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_marginTop="@dimen/smallMargin"
                            android:id="@+id/rvAboutInterest"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </xyz.gabrielrohez.resumeapp.custom.scroll.ObservableScrollView>
</LinearLayout>
