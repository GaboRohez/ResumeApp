<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@color/colorBackgroundRecycler"
    tools:context=".ui.about.AboutFragment"
    android:focusable="true">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <!-- header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_200">
                <ImageView
                    android:src="@drawable/dummy_header"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <RelativeLayout
                    android:background="#7E000000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        style="@style/subtitle2"
                        android:textColor="@color/colorWhite"
                        android:id="@+id/tvAboutName"
                        android:layout_centerInParent="true"
                        android:text="Jose Gabriel Rodríguez Hernández"/>
                    <LinearLayout
                        android:id="@+id/llAboutHeader"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_vertical"
                        android:layout_below="@id/tvAboutName"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/dimen_15"
                            android:layout_marginRight="@dimen/smallMargin"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_location"
                            android:tint="@color/colorWhite"/>
                        <TextView
                            android:id="@+id/tvAboutLocation"
                            style="@style/caption"
                            android:textColor="@color/colorWhiteLight"
                            android:text="Ciudad de México, CDMX"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvAboutJob"
                        android:layout_below="@+id/llAboutHeader"
                        android:layout_centerHorizontal="true"
                        style="@style/caption"
                        android:textColor="@color/colorWhiteLight"
                        android:text="Developer Android"/>
                </RelativeLayout>
            </RelativeLayout>
            <!-- body -->

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="6dp"
                android:layout_margin="@dimen/smallMargin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="@dimen/mediumMargin"
                    android:layout_width="match_parent"
                    android:layout_height="125dp">

                    <TextView
                        style="@style/subtitle3"
                        android:layout_marginBottom="@dimen/smallMargin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Social"/>

                    <LinearLayout
                        android:weightSum="3"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:id="@+id/layoutAboutWeb"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@mipmap/ic_launcher"/>
                            <TextView
                                style="@style/body3"
                                android:text="Web"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/layoutAboutPlay"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@mipmap/ic_launcher"/>
                            <TextView
                                style="@style/body3"
                                android:text="Play Store"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/layoutAboutGit"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@mipmap/ic_launcher"/>
                            <TextView
                                style="@style/body3"
                                android:text="Github"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="6dp"
                android:layout_margin="@dimen/smallMargin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="@dimen/mediumMargin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ivAboutIconContact"
                        android:layout_marginRight="@dimen/mediumMargin"
                        android:tint="@color/colorBlue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_message"/>
                    <TextView
                        android:id="@+id/tvAboutEmail"
                        android:layout_toRightOf="@+id/ivAboutIconContact"
                        style="@style/body3"
                        android:text="gabow95k@gmail.com"/>
                    <TextView
                        android:id="@+id/tvAboutPhone"
                        android:layout_below="@+id/tvAboutEmail"
                        android:layout_toRightOf="@+id/ivAboutIconContact"
                        style="@style/body3"
                        android:text="7712213158"/>
                    <View
                        android:id="@+id/viewSeparator"
                        android:layout_marginTop="@dimen/mediumMargin"
                        android:layout_below="@+id/tvAboutPhone"
                        android:layout_width="match_parent"
                        android:background="@color/colorGrayLight"
                        android:layout_height="0.5dp"/>
                    <TextView
                        android:layout_marginTop="@dimen/smallMargin"
                        android:layout_below="@+id/viewSeparator"
                        style="@style/body3"
                        android:text="@string/resume"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="6dp"
                android:layout_margin="@dimen/smallMargin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="@dimen/mediumMargin"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <TextView
                        android:id="@+id/tvAboutTitleYOE"
                        style="@style/subtitle3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Conocimientos Generales (Años de experiencia)"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
