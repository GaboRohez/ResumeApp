<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@color/colorBackgroundRecycler"
    tools:context=".ui.about.AboutFragment"
    android:focusable="true">


    <xyz.gabrielrohez.resumeapp.custom.scroll.ObservableScrollView
        android:id="@+id/aboutScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <!-- header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_300">
                <FrameLayout
                    android:id="@+id/img_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/ivAboutHeaderImage"
                        android:src="@drawable/dummy_header"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />
                </FrameLayout>
                <RelativeLayout
                    android:background="@color/colorTransparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        style="@style/subtitle2"
                        android:textColor="@color/colorWhite"
                        android:id="@+id/tvAboutName"
                        android:layout_centerInParent="true"/>
                    <LinearLayout
                        android:id="@+id/llAboutHeader"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_vertical"
                        android:layout_below="@id/tvAboutName"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/dimen_15"
                            android:layout_marginEnd="@dimen/smallMargin"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_location"
                            android:tint="@color/colorWhite"/>
                        <TextView
                            android:id="@+id/tvAboutLocation"
                            style="@style/caption"
                            android:textColor="@color/colorWhiteLight"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvAboutJob"
                        android:layout_below="@+id/llAboutHeader"
                        android:layout_centerHorizontal="true"
                        style="@style/caption"
                        android:textColor="@color/colorWhiteLight"
                        android:text="@string/dummy_job"/>
                </RelativeLayout>
            </RelativeLayout>
            <!-- body -->

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="@dimen/dimen_6"
                android:layout_margin="@dimen/smallMargin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="@dimen/mediumMargin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_125">

                    <TextView
                        style="@style/subtitle3"
                        android:layout_marginBottom="@dimen/smallMargin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:text="@string/social"/>

                    <LinearLayout
                        android:weightSum="3"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:id="@+id/layoutAboutWeb"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="@dimen/dimen_50"
                                android:layout_height="@dimen/dimen_50"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/icon_web"/>
                            <TextView
                                style="@style/body3"
                                android:text="@string/web"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/layoutAboutPlay"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="@dimen/dimen_50"
                                android:layout_height="@dimen/dimen_50"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/icon_play_store"/>
                            <TextView
                                style="@style/body3"
                                android:text="@string/play_store"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/layoutAboutGit"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:padding="@dimen/dimen_6"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:layout_width="@dimen/dimen_50"
                                android:layout_height="@dimen/dimen_50"
                                android:src="@drawable/icon_github"/>
                            <TextView
                                style="@style/body3"
                                android:text="@string/github"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="@dimen/dimen_6"
                android:layout_margin="@dimen/smallMargin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="@dimen/mediumMargin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ivAboutIconContact"
                        android:layout_marginEnd="@dimen/mediumMargin"
                        android:tint="@color/colorBlue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_message"/>
                    <TextView
                        android:id="@+id/tvAboutEmail"
                        android:layout_toEndOf="@+id/ivAboutIconContact"
                        style="@style/body3"/>
                    <TextView
                        android:id="@+id/tvAboutPhone"
                        android:layout_below="@+id/tvAboutEmail"
                        android:layout_toEndOf="@+id/ivAboutIconContact"
                        style="@style/body3"/>
                    <View
                        android:id="@+id/viewSeparator"
                        android:layout_marginTop="@dimen/mediumMargin"
                        android:layout_below="@+id/tvAboutPhone"
                        android:layout_width="match_parent"
                        android:background="@color/colorGrayLight"
                        android:layout_height="0.5dp"/>
                    <TextView
                        android:id="@+id/tvAboutResume"
                        android:layout_marginTop="@dimen/smallMargin"
                        android:justificationMode="inter_word"
                        android:layout_below="@+id/viewSeparator"
                        style="@style/body3"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="@dimen/dimen_6"
                android:layout_margin="@dimen/smallMargin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="@dimen/mediumMargin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvAboutTitleYOE"
                        style="@style/subtitle3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/year_of_experience"/>

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/barChart"
                        android:layout_height="@dimen/dimen_200"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/tvAboutTitleYOE"
                        android:layout_marginTop="@dimen/mediumMargin" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="@dimen/dimen_6"
                    android:layout_margin="@dimen/smallMargin"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="@dimen/mediumMargin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            style="@style/subtitle3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/aptitudes"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_marginTop="@dimen/smallMargin"
                            android:id="@+id/rvAboutAptitudes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="@dimen/dimen_6"
                    android:layout_margin="@dimen/smallMargin"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="@dimen/mediumMargin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            style="@style/subtitle3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/intereses"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_marginTop="@dimen/smallMargin"
                            android:id="@+id/rvAboutInterest"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </xyz.gabrielrohez.resumeapp.custom.scroll.ObservableScrollView>
</LinearLayout>
