<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/educationIconDocument"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_document"/>
        <TextView
            android:layout_toRightOf="@+id/educationIconDocument"
            style="@style/body2"
            android:text="@tools:sample/full_names"
            android:layout_marginLeft="@dimen/corner_8"
            android:layout_centerVertical="true"
            android:id="@+id/educationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/educationMenu"
            android:background="@null"
            android:src="@drawable/ic_more"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:elevation="@dimen/dimen_6"
        app:cardCornerRadius="@dimen/corner_6"
        android:layout_margin="@dimen/dimen_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_170">
        <RelativeLayout
            android:background="@color/colorBackgroundRecycler"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200">
            <View
                android:id="@+id/educationView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30"/>
            <com.github.barteksc.pdfviewer.PDFView
                android:elevation="@dimen/dimen_6"
                android:id="@+id/educationPdfView"
                android:layout_marginLeft="@dimen/dimen_30"
                android:layout_marginRight="@dimen/dimen_30"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/educationView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_400"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingRight="@dimen/dimen_15"
        android:paddingBottom="@dimen/dimen_15"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/educationPeriod"
            style="@style/body3"
            android:text="@tools:sample/full_names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:ellipsize="end"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/educationCertId"
            style="@style/body3"
            android:text="@tools:sample/full_names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:ellipsize="end"
            android:maxLines="1"/>
    </LinearLayout>
    <View
        android:background="@color/colorGrayLight"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>