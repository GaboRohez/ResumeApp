<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_education_image"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_padding_size_small">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_padding_size_small"
            android:layout_marginEnd="0dp"
            android:layout_toStartOf="@+id/contentImage"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:textSize="14sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/raleway_semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@tools:sample/lorem" />

            <TextView
                android:id="@+id/tvGrade"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_light"
                tools:text="@tools:sample/lorem" />

            <TextView
                android:id="@+id/tvCertID"
                android:textSize="10sp"
                android:fontFamily="@font/raleway_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@tools:sample/lorem" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/contentImage"
            android:layout_alignParentRight="true"
            tools:background="@color/lightOrange"
            android:layout_width="@dimen/dimen_education_image"
            android:layout_height="@dimen/dimen_education_image">
            <ImageView
                android:id="@+id/ivIcon"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_description"
                tools:tint="@color/darkOrange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>