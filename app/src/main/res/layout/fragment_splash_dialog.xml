<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/splashDialogContentImage"
        android:layout_marginTop="@dimen/smallMargin"
        android:background="@drawable/ic_circle"
        android:layout_centerHorizontal="true"
        android:layout_width="50dp"
        android:layout_height="50dp">
        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_uncheck"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/errorTitle"
        style="@style/subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splashDialogContentImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/smallMargin"
        android:text="@string/error" />

    <TextView
        android:id="@+id/splashDialogMessage"
        android:layout_marginTop="@dimen/smallMargin"
        style="@style/body2"
        android:textAlignment="center"
        android:layout_margin="@dimen/mediumMargin"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/errorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/custom_error"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/splashButtonAccept"
        android:layout_below="@id/splashDialogMessage"
        android:layout_marginTop="@dimen/smallMargin"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/radius_button"
        android:text="@string/accept"/>
</RelativeLayout>