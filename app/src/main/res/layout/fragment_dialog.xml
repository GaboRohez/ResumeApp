<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.dialog.DialogFragment">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/colorRed"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_height_dialog">

        <ImageView
            android:src="@drawable/ic_cloud_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:fontFamily="@font/raleway_semibold"
            android:textColor="@color/colorWhite"
            android:text="@string/sorry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_height_dialog">

            <TextView
                android:id="@+id/tvMessage"
                android:textAlignment="center"
                android:fontFamily="@font/raleway_semibold"
                android:layout_marginLeft="@dimen/margin_padding_size_medium"
                android:layout_marginRight="@dimen/margin_padding_size_medium"
                tools:text="@tools:sample/lorem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAccept"
                android:text="@string/accept"
                android:fontFamily="@font/raleway_semibold"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/margin_padding_size_large"
                app:cornerRadius="@dimen/dimen_corner_radius"
                android:backgroundTint="@color/colorRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>