<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_padding_size_medium"
        android:paddingRight="@dimen/margin_padding_size_medium"
        android:paddingBottom="@dimen/margin_padding_size_medium">
        <TextView
            android:text="@string/sumary"
            android:textSize="@dimen/text_size_large"
            android:fontFamily="@font/raleway_semibold"
            android:layout_marginBottom="@dimen/margin_padding_size_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvResume"
            android:justificationMode="inter_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_semibold"
            tools:text="@string/lorem"
            android:layout_marginBottom="@dimen/margin_padding_size_large"
            tools:ignore="UnusedAttribute" />

        <TextView
            android:text="@string/technical_skills"
            android:textSize="@dimen/text_size_large"
            android:fontFamily="@font/raleway_semibold"
            android:layout_marginBottom="@dimen/margin_padding_size_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@string/languages"
            android:textSize="@dimen/text_size_small"
            android:fontFamily="@font/raleway_semibold"
            android:layout_marginBottom="@dimen/margin_padding_size_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerLanguages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>